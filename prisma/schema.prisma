// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  username  String    @unique
  bio       String?
  avatar    String?
  snippets  Snippet[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([username])
  @@index([email])
}

model Snippet {
  id          String   @id @default(cuid())
  title       String
  description String?
  code        String   @db.Text
  language    String
  tags        String[]
  complexity  String?
  isPublic    Boolean  @default(true)
  views       Int      @default(0)
  slug        String   @unique
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([authorId])
  @@index([language])
  @@index([slug])
  @@index([createdAt])
}